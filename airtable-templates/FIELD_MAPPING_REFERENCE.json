{
  "Members_Table": {
    "table_name": "Members",
    "required_fields": {
      "UHID": {
        "type": "singleLineText",
        "description": "Unique Human ID - Primary identifier",
        "source": "Generated by system"
      },
      "First Name": {
        "type": "singleLineText", 
        "description": "Veteran's first name",
        "source": "Step 1 - Personal Info"
      },
      "Middle Name": {
        "type": "singleLineText",
        "description": "Veteran's middle name (optional)",
        "source": "Step 1 - Personal Info"
      },
      "Last Name": {
        "type": "singleLineText",
        "description": "Veteran's last name", 
        "source": "Step 1 - Personal Info"
      },
      "Full Name": {
        "type": "formula",
        "formula": "CONCATENATE({First Name}, IF({Middle Name}, CONCATENATE(' ', {Middle Name}), ''), ' ', {Last Name})",
        "description": "Calculated full name"
      },
      "Email": {
        "type": "email",
        "description": "Veteran's email address",
        "source": "Step 1 - Personal Info"
      },
      "Phone": {
        "type": "phoneNumber",
        "description": "Veteran's phone number",
        "source": "Step 1 - Personal Info"
      },
      "Date of Birth": {
        "type": "date",
        "description": "Veteran's date of birth",
        "source": "Step 1 - Personal Info"
      },
      "Age": {
        "type": "formula",
        "formula": "DATETIME_DIFF(TODAY(), {Date of Birth}, 'years')",
        "description": "Calculated age"
      },
      "Street Address": {
        "type": "singleLineText",
        "description": "Street address",
        "source": "Step 1 - Personal Info"
      },
      "City": {
        "type": "singleLineText",
        "description": "City",
        "source": "Step 1 - Personal Info"
      },
      "State": {
        "type": "singleSelect",
        "description": "US State",
        "source": "Step 1 - Personal Info",
        "options": ["Alabama", "Alaska", "Arizona", "Arkansas", "California", "Colorado", "Connecticut", "Delaware", "Florida", "Georgia", "Hawaii", "Idaho", "Illinois", "Indiana", "Iowa", "Kansas", "Kentucky", "Louisiana", "Maine", "Maryland", "Massachusetts", "Michigan", "Minnesota", "Mississippi", "Missouri", "Montana", "Nebraska", "Nevada", "New Hampshire", "New Jersey", "New Mexico", "New York", "North Carolina", "North Dakota", "Ohio", "Oklahoma", "Oregon", "Pennsylvania", "Rhode Island", "South Carolina", "South Dakota", "Tennessee", "Texas", "Utah", "Vermont", "Virginia", "Washington", "West Virginia", "Wisconsin", "Wyoming"]
      },
      "ZIP Code": {
        "type": "singleLineText",
        "description": "ZIP code",
        "source": "Step 1 - Personal Info"
      },
      "Full Address": {
        "type": "formula",
        "formula": "CONCATENATE({Street Address}, ', ', {City}, ', ', {State}, ' ', {ZIP Code})",
        "description": "Calculated full address"
      },
      "Registration Date": {
        "type": "dateTime",
        "description": "When veteran registered",
        "source": "System generated"
      },
      "Profile Status": {
        "type": "singleSelect",
        "description": "Current profile status",
        "source": "System calculated",
        "options": [
          {"name": "New", "color": "blueBright2"},
          {"name": "In Progress", "color": "yellowBright2"},
          {"name": "Complete", "color": "greenBright2"},
          {"name": "Inactive", "color": "grayBright2"}
        ]
      },
      "Total Claims": {
        "type": "number",
        "precision": 0,
        "description": "Number of claims created",
        "source": "Auto-calculated"
      },
      "Notes": {
        "type": "multilineText",
        "description": "Additional notes",
        "source": "System generated"
      }
    }
  },
  "Disability_Claims_2025": {
    "table_name": "Disability_Claims_2025",
    "required_fields": {
      "UHID": {
        "type": "singleLineText",
        "description": "Links to Members table",
        "source": "Generated by system"
      },
      "Veteran Name": {
        "type": "singleLineText",
        "description": "Full name of veteran",
        "source": "Step 1 - Personal Info"
      },
      "Email": {
        "type": "email",
        "description": "Veteran's email",
        "source": "Step 1 - Personal Info"
      },
      "Phone": {
        "type": "phoneNumber", 
        "description": "Veteran's phone",
        "source": "Step 1 - Personal Info"
      },
      "Claim Status": {
        "type": "singleSelect",
        "description": "Current claim status",
        "source": "System calculated",
        "options": [
          {"name": "Draft", "color": "grayBright2"},
          {"name": "In Review", "color": "blueBright2"},
          {"name": "Ready", "color": "purpleBright2"},
          {"name": "Submitted", "color": "tealBright2"},
          {"name": "Processing", "color": "yellowBright2"},
          {"name": "Approved", "color": "greenBright2"},
          {"name": "Denied", "color": "redBright2"}
        ]
      },
      "Risk Score": {
        "type": "number",
        "precision": 0,
        "description": "Calculated risk score 0-100",
        "source": "System calculated"
      },
      "Completion %": {
        "type": "number", 
        "precision": 0,
        "description": "Claim completion percentage",
        "source": "System calculated"
      },
      "Created Date": {
        "type": "dateTime",
        "description": "When claim was created",
        "source": "System generated"
      },
      "Last Modified": {
        "type": "dateTime",
        "description": "Last update time",
        "source": "System generated"
      },
      "Branch of Service": {
        "type": "multipleSelects",
        "description": "Military branch(es)",
        "source": "Step 2 - Service History",
        "options": [
          {"name": "Army", "color": "greenBright2"},
          {"name": "Navy", "color": "blueBright2"},
          {"name": "Air Force", "color": "cyanBright2"},
          {"name": "Marines", "color": "redBright2"},
          {"name": "Coast Guard", "color": "orangeBright2"},
          {"name": "Space Force", "color": "purpleBright2"}
        ]
      },
      "Service Dates": {
        "type": "singleLineText",
        "description": "Service date range",
        "source": "Step 2 - Service History"
      },
      "Current Rating": {
        "type": "number",
        "precision": 0,
        "description": "Current disability rating",
        "source": "Step 2 - Service History"
      },
      "Notes": {
        "type": "multilineText",
        "description": "Claim details and notes",
        "source": "System generated"
      },
      "Conditions Claimed": {
        "type": "multilineText",
        "description": "List of medical conditions",
        "source": "Step 4 - Medical Conditions"
      },
      "Service Connection": {
        "type": "checkbox",
        "description": "Has service-connected conditions",
        "source": "Step 4 - Medical Conditions"
      },
      "C&P Exam Needed": {
        "type": "checkbox",
        "description": "Needs Compensation & Pension exam",
        "source": "System calculated"
      },
      "Medical Records": {
        "type": "checkbox",
        "description": "Has medical records uploaded",
        "source": "Step 6 - Documents"
      },
      "Buddy Statements": {
        "type": "checkbox",
        "description": "Has buddy statements",
        "source": "Step 6 - Documents"
      },
      "Exposure Type": {
        "type": "multipleSelects",
        "description": "Types of hazardous exposure",
        "source": "Step 3 - Deployments",
        "options": [
          {"name": "Agent Orange", "color": "orangeBright2"},
          {"name": "Burn Pits", "color": "redBright2"},
          {"name": "Radiation", "color": "yellowBright2"},
          {"name": "Asbestos", "color": "grayBright2"},
          {"name": "PFAS", "color": "greenBright2"},
          {"name": "Gulf War", "color": "blueBright2"}
        ]
      }
    }
  },
  "Healthcare_Claims_2025": {
    "description": "For claims without specific conditions (when conditions are skipped)",
    "inherits_base_fields_from": "Disability_Claims_2025",
    "additional_fields": {
      "Priority Group": {
        "type": "singleSelect",
        "description": "VA healthcare priority group",
        "source": "System calculated",
        "options": [
          {"name": "Group 1", "color": "redBright2"},
          {"name": "Group 2", "color": "orangeBright2"},
          {"name": "Group 3", "color": "yellowBright2"},
          {"name": "Group 4", "color": "greenBright2"},
          {"name": "Group 5", "color": "blueBright2"},
          {"name": "Group 6", "color": "purpleBright2"},
          {"name": "Group 7", "color": "grayBright2"},
          {"name": "Group 8", "color": "pinkBright2"}
        ]
      },
      "Preferred Facility": {
        "type": "singleLineText",
        "description": "Preferred VA medical facility",
        "source": "Step 5 - Healthcare Providers"
      },
      "Insurance": {
        "type": "checkbox",
        "description": "Has private insurance",
        "source": "Step 1 - Personal Info"
      },
      "Copay Required": {
        "type": "checkbox",
        "description": "Subject to VA copays",
        "source": "System calculated"
      }
    }
  }
}